<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btsolicitar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="143dp"
        android:layout_marginTop="87dp"
        android:onClick="onrequestpermission"
        android:text="Solicitar" />

    <Button
        android:id="@+id/btArchivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="187dp"
        android:drawableLeft="@drawable/iconsave"
        android:enabled="true"
        android:text="archivo" />

    <Button
        android:id="@+id/btCamara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="234dp"
        android:layout_marginTop="187dp"
        android:drawableLeft="@drawable/iconcamara"
        android:enabled="true"
        android:text="Camara" />

    <Button
        android:id="@+id/btCalendario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="274dp"
        android:layout_marginEnd="131dp"
        android:drawableLeft="@drawable/iconcalendario"
        android:enabled="true"
        android:text="Calendario" />

</RelativeLayout>